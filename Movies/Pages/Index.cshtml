@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Movies</h1>

<form method="post">
    <input type="text" name="search" id="search" />
    <input type="submit" value="Search" />

    <h2>MPAA Ratings</h2>
    <label>
        <input type="checkbox" name="rating" value="G" />
        Rated G
    </label>

    <label>
        <input type="checkbox" name="rating" value="PG" />
        Rated PG
    </label>

    <label>
        <input type="checkbox" name="rating" value="R" />
        Rated R
    </label>

    <label>
        <input type="checkbox" name="rating" value="NC-17" />
        Rated NC-17
    </label>
</form>


<div>
    @foreach( Movie movie in Model.Movies)
    {
    <div class="movie-entry">
        <h4>@movie.Title
            <smaller>
                @(movie.MPAA_Rating == null ? "" : $"({movie.MPAA_Rating})")
            </smaller>
        </h4>
        <i>@movie.Major_Genre</i>
        <div class="Ratings">
            <div>
                Rotten Tomatoes
                @movie.Rotten_Tomatoes_Rating
            </div>

            <div>
                IMDB Rating
                @movie.IMDB_Rating
            </div>
        </div>
    </div>
        
        
    }


</div>
